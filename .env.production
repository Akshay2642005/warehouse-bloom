# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Database Configuration
DATABASE_URL="postgresql://warehouse_user:CHANGE_ME@postgres:5432/warehouse_db"
POSTGRES_PASSWORD="CHANGE_ME_STRONG_PASSWORD"

# Redis Configuration
REDIS_URL="redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379"
REDIS_PASSWORD="CHANGE_ME_REDIS_PASSWORD"

# Server Configuration
NODE_ENV="production"
PORT=3001
CLIENT_ORIGIN="https://your-domain.com"

# Security Configuration - CHANGE ALL OF THESE
JWT_SECRET="CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Email Configuration
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USER="your-email@your-domain.com"
SMTP_PASS="your-email-password"
SMTP_FROM="Warehouse Management <noreply@your-domain.com>"

# Polar Payments Configuration
POLAR_ACCESS_TOKEN="your-production-polar-access-token"
POLAR_WEBHOOK_SECRET="your-polar-webhook-secret"
POLAR_ENVIRONMENT="production"

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH="/app/uploads"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
LOG_LEVEL="info"

# Frontend Configuration
VITE_API_BASE_URL="https://your-domain.com/api"

# Monitoring Passwords
GRAFANA_PASSWORD="CHANGE_ME_GRAFANA_PASSWORD"

# Optional: External Services
# SENTRY_DSN="your-sentry-dsn-for-error-tracking"
# DATADOG_API_KEY="your-datadog-api-key"
# NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"